<h1>MY TASKS</h1>

<ul>
  <% @tasks.each do |task| %>
    <li> <%= task.completed == true ? "[V]" : "[ ]" %>
      <label for="task"><%= link_to task.title, task_path(task) %>  <%= link_to "   X", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></label>
      </li>
  <% end %>
  
</ul>

<%= link_to "+ Add a new task", new_task_path %>

